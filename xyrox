local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

local Window = WindUI:CreateWindow({
    Title = "Xryox - Grow a Garden",
    Icon = "dollar-sign",
    Author = "by xyroxcursedasian",
    Folder = "XryoxGaG",
    Size = UDim2.fromOffset(580, 460),
    Transparent = true,
    Theme = "Dark",
    User = {
        Enabled = true,
        Anonymous = false
    },
    SideBarWidth = 200,
    HasOutline = true,
})

local UI = Window

local farmTab = UI:Tab({Title = "Farm", Icon = "sprout"})
local utilityTab = UI:Tab({Title = "Utility", Icon = "settings"})
local petTab = UI:Tab({Title = "Pet", Icon = "paw-print"})
local espTab = UI:Tab({Title = "ESP", Icon = "eye"})
local fpsTab = UI:Tab({Title = "FPS", Icon = "gauge"})

local autoClaim = false
local autoPlant = false
local autoSell = false

farmTab:Toggle({
    Title = "Auto Claim",
    Value = false,
    Callback = function(v)
        autoClaim = v
        if v then
            task.spawn(function()
                while autoClaim do
                    for _, plant in pairs(workspace:GetDescendants()) do
                        if plant.Name == "Harvest" and plant.Parent:FindFirstChild("TouchInterest") then
                            game:GetService("ReplicatedStorage").GameEvents.HarvestRemote:FireServer(plant.Parent)
                        end
                    end
                    task.wait(0.5)
                end
            end)
        end
    end
})

farmTab:Toggle({
    Title = "Auto Plant",
    Value = false,
    Callback = function(v)
        autoPlant = v
        if v then
            task.spawn(function()
                while autoPlant do
                    local remote = game.ReplicatedStorage:FindFirstChild("PlantSeed")
                    if remote then
                        remote:FireServer("Tomato")
                    end
                    task.wait(2)
                end
            end)
        end
    end
})

farmTab:Toggle({
    Title = "Auto Sell",
    Value = false,
    Callback = function(v)
        autoSell = v
        if v then
            task.spawn(function()
                while autoSell do
                    local inv = game.Players.LocalPlayer:FindFirstChild("Inventory")
                    if inv and #inv:GetChildren() >= 30 then
                        local sell = game.ReplicatedStorage:FindFirstChild("SellItems")
                        if sell then
                            sell:FireServer()
                        end
                    end
                    task.wait(3)
                end
            end)
        end
    end
})

utilityTab:Button({
    Title = "Auto Buy Twilight",
    Callback = function()
        local remote = game.ReplicatedStorage:FindFirstChild("BuyTwilight")
        if remote then
            remote:FireServer()
        end
    end
})

utilityTab:Button({
    Title = "Auto Buy Bloodmoon",
    Callback = function()
        local remote = game.ReplicatedStorage:FindFirstChild("BuyBloodmoon")
        if remote then
            remote:FireServer()
        end
    end
})

utilityTab:Button({
    Title = "Auto Claim Moonlit",
    Callback = function()
        local remote = game.ReplicatedStorage:FindFirstChild("ClaimMoonlit")
        if remote then
            remote:FireServer()
        end
    end
})

utilityTab:Button({
    Title = "Go to Owl",
    Callback = function()
        local owl = workspace:FindFirstChild("Owl")
        if owl then
            game.Players.LocalPlayer.Character:MoveTo(owl.Position)
        end
    end
})

utilityTab:Button({
    Title = "Hop if Not Bloodmoon",
    Callback = function()
        if game.Lighting.TimeOfDay ~= "00:00:00" then
            game:GetService("TeleportService"):Teleport(game.PlaceId)
        end
    end
})

petTab:Toggle({
    Title = "Auto Feed Pets",
    Value = false,
    Callback = function(v)
        if v then
            task.spawn(function()
                while v do
                    local remote = game.ReplicatedStorage:FindFirstChild("FeedPets")
                    if remote then
                        remote:FireServer()
                    end
                    task.wait(4)
                end
            end)
        end
    end
})

espTab:Toggle({
    Title = "Enable ESP",
    Value = false,
    Callback = function(enabled)
        if enabled then
            task.spawn(function()
                while enabled do
                    for _, obj in pairs(workspace:GetDescendants()) do
                        if obj:IsA("Part") and obj.Name == "Fruit" and not obj:FindFirstChild("ESP") then
                            local mutation = obj:FindFirstChild("Mutation")
                            if mutation then
                                local esp = Instance.new("BillboardGui", obj)
                                esp.Name = "ESP"
                                esp.Size = UDim2.new(0, 100, 0, 30)
                                esp.AlwaysOnTop = true
                                esp.StudsOffset = Vector3.new(0, 2, 0)
                                local label = Instance.new("TextLabel", esp)
                                label.Size = UDim2.new(1, 0, 1, 0)
                                label.Text = mutation.Value
                                label.TextColor3 = Color3.fromRGB(255, 255, 0)
                                label.BackgroundTransparency = 1
                            end
                        end
                    end
                    task.wait(3)
                end
            end)
        end
    end
})

fpsTab:Button({
    Title = "Boost FPS",
    Callback = function()
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("Texture") or v:IsA("Decal") or v:IsA("ParticleEmitter") or v:IsA("Trail") then
                v:Destroy()
            elseif v:IsA("BasePart") then
                v.Material = Enum.Material.SmoothPlastic
            end
        end
        game.Lighting.FogEnd = 100000
        game.Lighting.GlobalShadows = false
    end
})

local VirtualUser = game:service("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:connect(function()
    VirtualUser:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
    task.wait(1)
    VirtualUser:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
end)

print("[xyroxcursedasian] WindUI (Footagesus) Loaded Successfully")
